@model DMS_CPMS.Models.Document.AddDocumentViewModel

<div class="modal fade" id="addDocumentModal" tabindex="-1" aria-labelledby="addDocumentModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content ocean-modal">
            <div class="modal-header">
                <h5 class="modal-title" id="addDocumentModalLabel">Add New Document</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <form asp-controller="Document" asp-action="Add" method="post" enctype="multipart/form-data">
                <div class="modal-body">
                    @Html.AntiForgeryToken()
                    <input type="hidden" asp-for="PatientID" />
                    <div class="row g-3">
                        <div class="col-md-6">
                            <label asp-for="DocumentTitle" class="form-label"></label>
                            <input asp-for="DocumentTitle" class="form-control" />
                            <span asp-validation-for="DocumentTitle" class="text-danger"></span>
                        </div>
                        <div class="col-md-6">
                            <label asp-for="DocumentType" class="form-label"></label>
                            <input asp-for="DocumentType" class="form-control" placeholder="e.g. Lab Result, Prescription" />
                            <span asp-validation-for="DocumentType" class="text-danger"></span>
                        </div>
                        <div class="col-12">
                            <label asp-for="File" class="form-label">File Upload</label>
                            <input asp-for="File" type="file" class="form-control" />
                            <span asp-validation-for="File" class="text-danger"></span>
                            <small class="text-muted d-block">Allowed file types: PDF, JPG, PNG, CSV.</small>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-outline-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-primary">Upload Document</button>
                </div>
            </form>
        </div>
    </div>
</div>

@model DMS_CPMS.Models.Patient.PatientDetailsViewModel

@{
    ViewData["Title"] = "Patient Details";
}

<div class="container-fluid">
    <div class="row mb-3">
        <div class="col">
            <h2 class="page-title text-secondary">Patient Details</h2>
            <p class="text-muted mb-0">View patient information and manage documents.</p>
        </div>
        <div class="col-auto d-flex align-items-end">
            <a asp-action="Index" class="btn btn-outline-secondary me-2">Back to List</a>
            <button type="button" class="btn btn-secondary" data-bs-toggle="modal" data-bs-target="#editPatientModal">
                Edit Patient
            </button>
        </div>
    </div>

    <div class="row g-3">
        <div class="col-lg-4">
            <div class="card shadow-sm border-0 mb-3">
                <div class="card-header bg-primary text-white">
                    <strong>Patient Information</strong>
                </div>
                <div class="card-body">
                    <dl class="row mb-0">
                        <dt class="col-sm-4">First Name</dt>
                        <dd class="col-sm-8">@Model.Patient.FirstName</dd>

                        <dt class="col-sm-4">Last Name</dt>
                        <dd class="col-sm-8">@Model.Patient.LastName</dd>

                        <dt class="col-sm-4">Birth Date</dt>
                        <dd class="col-sm-8">@Model.Patient.BirthDate.ToString("yyyy-MM-dd")</dd>

                        <dt class="col-sm-4">Gender</dt>
                        <dd class="col-sm-8">@Model.Patient.Gender</dd>
                    </dl>
                </div>
            </div>
        </div>

        <div class="col-lg-8">
            <div class="d-flex justify-content-between align-items-center mb-2">
                <h5 class="mb-0 text-secondary">Recent Documents</h5>
                <button type="button" class="btn btn-primary btn-sm" data-bs-toggle="modal" data-bs-target="#addDocumentModal">
                    + Add Document
                </button>
            </div>

            <div class="card shadow-sm border-0">
                <div class="card-body">
                    @if (TempData["Error"] != null)
                    {
                        <div class="alert alert-danger">@TempData["Error"]</div>
                    }

                    <div class="table-responsive">
                        <table class="table table-striped table-hover align-middle mb-0">
                            <thead class="table-header-ocean">
                                <tr>
                                    <th>Title</th>
                                    <th>Type</th>
                                    <th>Upload Date</th>
                                    <th style="width: 140px;">Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (!Model.Documents.Any())
                                {
                                    <tr>
                                        <td colspan="4" class="text-center text-muted py-4">
                                            No documents uploaded yet for this patient.
                                        </td>
                                    </tr>
                                }
                                else
                                {
                                    foreach (var doc in Model.Documents)
                                    {
                                        <tr>
                                            <td>@doc.DocumentTitle</td>
                                            <td>@doc.DocumentType</td>
                                            <td>@doc.UploadDate.ToString("yyyy-MM-dd")</td>
                                            <td>
                                                <a asp-controller="Document" asp-action="ViewDocument" asp-route-id="@doc.DocumentID" class="btn btn-sm btn-outline-secondary me-1">
                                                    View
                                                </a>
                                            </td>
                                        </tr>
                                    }
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@await Html.PartialAsync("~/Views/Patient/_EditPatientModal.cshtml", new DMS_CPMS.Models.Patient.EditPatientViewModel
{
    PatientID = Model.Patient.PatientID,
    FirstName = Model.Patient.FirstName,
    LastName = Model.Patient.LastName,
    BirthDate = Model.Patient.BirthDate,
    Gender = Model.Patient.Gender
})

@await Html.PartialAsync("~/Views/Document/_AddDocumentModal.cshtml", new DMS_CPMS.Models.Document.AddDocumentViewModel
{
    PatientID = Model.Patient.PatientID
})

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

